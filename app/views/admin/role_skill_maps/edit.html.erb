<%= content_for(:title, "Edit #{@role_skill_map.title}")%>

<%= form_with(model: @role_skill_map, url: admin_role_skill_map_path(@role_skill_map), method: :patch) do |form| %>

  <div class="sticky top-0 py-12 bg-gray-50 border-b border-black <%= horizontal_padding %> z-20">
    <div class="flex justify-between">
      <div class="text-5xl tracking-wide">Editing <%= @role_skill_map.title %></div>
        <div>
          <%#= turbo_frame_tag "publish-button" do %>
            <%#= render "courses/publish_button", course: @course %>
          <%# end %>
          <%= form.submit "Save", class: "cursor-pointer text-white bg-paleFern hover:bg-graphite focus:ring-4 focus:ring-fern font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 focus:outline-none" %>
        </div>
    </div>
    <div class="flex justify-start mt-10">
      <div>
        <%#= link_to "Description", edit_course_path(@course), class: controller_name == 'courses' ? active_tab_class : inactive_tab_class %>
      </div>
      <div class="ml-4">
        <%#= link_to "Content", "", class: controller_name == 'contents' ? active_tab_class : inactive_tab_class %>
      </div>
    </div>
  </div>


  <div class="space-y-12 <%= horizontal_padding %>">
    <div class="py-12">
      <div class="border-b border-gray-900/10 pb-12">
      <h2 class="text-base font-semibold leading-7 text-gray-900">Role skill mapping</h2>
      <p class="mt-1 text-sm leading-6 text-gray-600">Edit the Role skill map information</p>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-6">
          <%= form.label :title, "Course title", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :title, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :management_skill, "Management Skill", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :management_skill, type: "number", step: "0.1", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :technical_skill, "Technical Skill", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :technical_skill, type: "number", step: "0.1", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :communication_skill, "Communication Skill", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :communication_skill, type: "number", step: "0.1", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :financial_skill, "Financial Skill", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :financial_skill, type: "number", step: "0.1", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :analytical_skill, "Analytical Skill", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :analytical_skill, type: "number", step: "0.1", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <%= form.label :work_ethics, "Work Ethics", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :work_ethics, type: "number", step: "0.1", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
    


        <div class="sm:col-span-6">
          <%= form.label :description, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_area :description, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-6 border-b border-black pb-8">
          <%= form.label :slug, "slug", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
              <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm">https://ninjaboard.com/</span>
              <%= form.text_field :slug, class: "block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
<% end %>