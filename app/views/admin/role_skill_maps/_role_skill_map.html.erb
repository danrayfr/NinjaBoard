<div id="<%= dom_id(role_skill_map)%>">
  <div class="p-4 max-w-md">
    <div class="flex rounded-lg h-full bg-ivory px-6 py-12 flex-col">
      <div class="flex items-center mb-3">
        <h2 class="text-graphite text-lg font-medium hover:underline touch-pointer"><%= link_to role_skill_map.title,  edit_admin_role_skill_map_path(role_skill_map) %></h2>
      </div>
      <div class="flex flex-col justify-between flex-grow">
        <p class="leading-relaxed text-base text-graphite">
          <%= role_skill_map.description %>
        </p>
      </div>
      <div class="py-2">
        <div class="flex justify-between items-center mb-4">
          <div class="text-sm font-semibold text-gray-600">Management</div>
          <div class="relative w-64 h-2 bg-offWhite rounded-full">
            <div class="absolute top-0 left-0 h-2 bg-paleFern rounded-full" style="width: <%= format_skill_progress(role_skill_map.management_skill) %>%;"></div>
          </div>
        </div>

        <div class="flex justify-between items-center mb-4">
          <div class="text-sm font-semibold text-gray-600">Technical</div>
          <div class="relative w-64 h-2 bg-offWhite rounded-full">
            <div class="absolute top-0 left-0 h-2 bg-paleFern rounded-full" style="width: <%= format_skill_progress(role_skill_map.technical_skill) %>%;"></div>
          </div>
        </div>

        <div class="flex justify-between items-center mb-4">
          <div class="text-sm font-semibold text-gray-600">Communication</div>
          <div class="relative w-64 h-2 bg-offWhite rounded-full">
            <div class="absolute top-0 left-0 h-2 bg-paleFern rounded-full" style="width: <%= format_skill_progress(role_skill_map.communication_skill) %>%;"></div>
          </div>
        </div>

        <div class="flex justify-between items-center mb-4">
          <div class="text-sm font-semibold text-gray-600">Financial</div>
          <div class="relative w-64 h-2 bg-offWhite rounded-full">
            <div class="absolute top-0 left-0 h-2 bg-paleFern rounded-full" style="width: <%= format_skill_progress(role_skill_map.financial_skill) %>%;"></div>
          </div>
        </div>

        <div class="flex justify-between items-center mb-4">
          <div class="text-sm font-semibold text-gray-600">Analytical</div>
          <div class="relative w-64 h-2 bg-offWhite rounded-full">
            <div class="absolute top-0 left-0 h-2 bg-paleFern rounded-full" style="width: <%= format_skill_progress(role_skill_map.analytical_skill) %>%;"></div>
          </div>
        </div>

        <div class="flex justify-between items-center mb-4">
          <div class="text-sm font-semibold text-gray-600">Work Ethics</div>
          <div class="relative w-64 h-2 bg-offWhite rounded-full">
            <div class="absolute top-0 left-0 h-2 bg-paleFern rounded-full" style="width: <%= format_skill_progress(role_skill_map.work_ethics) %>%;"></div>
          </div>
        </div>
      </div>

      <div>
        <%= link_to "Click to Edit", edit_admin_role_skill_map_path(role_skill_map), class: "cursor-pointer text-white bg-paleFern hover:bg-graphite focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 focus:outline-none" %>
      </div>
    </div>    
  </div>
</div>