<a class="member flex w-full items-center space-x-4 px-4 py-6 lg:px-8 rounded-sm bg-gray-50 hover:bg-gray-200 hover:bg-opacity-80" href="<%= current_user.id == rank.id ? root_path : leaderboard_path(rank.id) %>">
  <div class="relative">
    <div class="p-1 w-8 h-8 shadow absolute top-0 left-0 -mt-3 -ml-3 rounded-full flex items-center justify-center border-4 border-white <%= rankings_color(index + 1) %>">
      <span class="inline-block text-sm text-white">
        <%= index + 1 %>
      </span>
    </div>
    <% if rank.avatar_url.nil? %>
      <%= image_tag "profile/ninja.jpeg", class: "rounded-md shadow-lg w-24 h-24 object-cover" %>
    <% else %>
      <%= image_tag rank.avatar_url, class: "rounded-md shadow-lg w-24 h-24 object-cover", alt: "user photo" %>
    <% end %>
  </div>
  <div class="lg:flex lg:flex-grow lg:items-center lg:justify-between">
    <div>
      <p class="text-lg font-medium font-sister text-graphite tracking-widest">
        <%= rank.name %>
      </p>
      <p class="user-title text-fern text-opacity-80 text-sm uppercase">
        <%= rank.badge.rank %>
      </p>
    </div>
    <div class="mt-1 flex items-center space-x-2 lg:space-x-4">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-4 lg:h-8 opacity-75">
        <path
          stroke="#23282E"
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"
        />
      </svg>

      <span class="text-graphite text-opacity-80 text- lg:text-xl">
        <%= rank.send("#{category}_score").round(2) %>
      </span>
    </div>

    <div class="mt-1 flex items-center space-x-2 lg:space-x-4">
      <span class="h-12 w-12 md:h-20 md:w-20 lg:h-36 lg:w-36">
        <%= image_tag rank.badge.badges %>
      </span>
    </div>
  </div>
</a>
