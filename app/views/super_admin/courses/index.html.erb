<%= content_for(:title, "Courses") %>


<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Courses</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all courses</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <%= link_to "Add new course", new_super_admin_course_path, class: "cursor-pointer rounded-md bg-paleFern px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-graphite focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2
      focus-visible:outline-indigo-600" %>
    </div>
  </div>

  <!-- Breadcrumbs -->
  <div class="flex gap-4 mt-2">
    <ul class="flex px-5 py-3 text-gray-700 border border-gray-200 rounded-lg bg-gray-50">
      <li class="leading-none text-dark">
        <%= link_to super_admin_path, class: "inline-flex items-center text-orange-700" do %>
          <span class="text-sm leading-none">Dashboard</span>
        <% end %>
      </li>
      <li class="leading-none text-dark">
        <span class="text-sm leading-none">/ Courses</span>
      </li>
    </ul>
  </div>

  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th scope="col" class="py-3 pl-3.5 text-left text-sm font-semibold text-gray-900"><span class="sr-only">Thumbnail</span></th>
              <th scope="col" class="py-3 pl-3.5 text-left text-sm font-semibold text-gray-900">Title</th>
              <th scope="col" class="py-3 pl-3.5 text-left text-sm font-semibold text-gray-900">Category</th>
              <th scope="col" class="py-3 pl-3.5 text-left text-sm font-semibold text-gray-900">Lessons</th>
              <th scope="col" class="py-3 pl-3.5 text-left text-sm font-semibold text-gray-900">Watch duration</th>
              <th scope="col" class="py-3 pl-3.5 text-left text-sm font-semibold text-gray-900">Impact</th>
              <!--th scope="col" class="py-3 pl-3.5 text-left text-sm font-semibold text-gray-900">Status</th-->
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
                <span class="sr-only">Edit</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% @super_admin_courses.each do |course| %>
              <%= render "course", course: course %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
