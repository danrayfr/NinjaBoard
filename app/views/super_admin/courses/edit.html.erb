<%= content_for(:title, "Edit #{@super_admin_course.title}")%>

<%= form_with(model: @super_admin_course, url: super_admin_course_path(@super_admin_course), method: :patch) do |form| %>

  <div class="sticky top-0 py-12 bg-gray-50 border-b border-black <%= horizontal_padding %> z-20">
    <div class="flex justify-between">
      <div class="text-5xl tracking-wide"><%= @super_admin_course.title %></div>
        <div>
          <%#= turbo_frame_tag "publish-button" do %>
            <%#= render "courses/publish_button", course: @course %>
          <%# end %>
          <%= form.submit "Update", class: "cursor-pointer text-white bg-paleFern hover:bg-graphite focus:ring-4 focus:ring-fern font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 focus:outline-none" %>
        </div>
    </div>

    <!-- Breadcrumbs -->
    <div class="flex justify-start mt-10">
      <ul class="flex px-5 py-3 text-gray-700 border border-gray-200 rounded-lg bg-gray-50">
        <li class="leading-none text-dark">
          <%= link_to super_admin_path, class: "inline-flex items-center text-orange-700" do %>
            <span class="text-sm leading-none">Dashboard</span>
          <% end %>
        </li>
        <li class="leading-none text-dark">
          <%= link_to super_admin_courses_path, class: "inline-flex items-center text-orange-700" do %>
            <span class="text-sm leading-none">/Courses</span>
          <% end %>
        </li>
        <li class="leading-none text-dark">
          <span class="text-sm leading-none">/<%= @super_admin_course.title %></span>
        </li>
        <li class="leading-none text-dark">
          <span class="text-sm leading-none">/ Edit</span>
        </li>
      </ul>
    </div>
  </div>
  


  <div class="space-y-12 <%= horizontal_padding %>">
    <div class="py-12">
      <div class="border-b border-gray-900/10 pb-12">
      <h2 class="text-base font-semibold leading-7 text-gray-900">Course Information</h2>
      <p class="mt-1 text-sm leading-6 text-gray-600">Edit the course information</p>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">

        <div class="sm:col-span-6">
          <%= form.label :title, "Course title", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :title, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :author, "Course author", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :author, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :category, "Category", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.collection_select :category, Course.categories.keys, :to_s, :humanize, { prompt: 'Select a category' }, { class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" } %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :impact, "Course Impact", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :impact, type: "number", step: "0.1", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>
  
        <div class="sm:col-span-6">
          <%= form.label :description, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.rich_text_area :description, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :slug, "URL", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600">
              <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm"><%= root_url %>super-admin/courses/</span>
              <%= form.text_field :slug, class: "block w-full flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
            </div>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= @super_admin_course.image.present? ? (image_tag @super_admin_course.image, class: "w-64 rounded mb-2") : nil %>
          <label for="name" class="text-sm">Cover Image</label>
          <%= form.file_field :image, id: "image" %>
        </div>

        <div class="sm:col-span-6 flex gap-x-2">
          <%= form.label :paid, "Paid?", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div>
            <%= form.check_box :paid, class: "rounded border-gray-600" %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :stripe_price_id, "Stripe price ID", class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.text_field :stripe_price_id, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-6 border-b border-black pb-8">
          <%= form.label :premium_description, class: "block text-sm font-medium leading-6 text-gray-900" %>
          <div class="mt-2">
            <%= form.rich_text_area :premium_description, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

      </div>
    </div>
    </div>
  </div>
<% end %>
