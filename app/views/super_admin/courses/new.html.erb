<%= content_for(:title, "New course") %>

<div class="<%= horizontal_padding %>">
  <div class="space-y-10 divide-y divide-gray-900/10">
    <div class="grid grid-cols-1 gap-x-8 pt-10 md:grid-cols-3">
      <div class="px-4 sm:px-0">
        <h2 class="text-base font-semibold leading-7 text-gray-900">Create a new course</h2>
        <p class="mt-1 text-sm leading-6 text-gray-600">Make some selections, fill in some boxes, and go live in minutes.</p>
        <p class="mt-4">
            <%= render 'super_admin/shared/error_messages', object: @super_admin_course %>
         </p>
      </div>

      <%= form_with(model: @super_admin_course, url: super_admin_courses_path, method: :post, data: { turbo: false }, class: "bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2") do |form| %>
      
        <div class="px-4 py-6 sm:p-8">
          <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-8">

            <div class="col-span-full">
              <%= form.label :title, "Course title",class: "block text-sm font-medium leading-6 text-gray-700" %>
              <div class="mt-2">
                <%= form.text_field :title, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
            </div>

            <div class="col-span-full">
              <%= form.label :description, class: "block text-sm font-medium leading-6 text-gray-700" %>
              <div class="mt-2">
                <%= form.rich_text_area :description, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
            </div>

            <div class="col-span-full flex flex-col mt-4">
              <%= @super_admin_course.image.present? ? (image_tag @super_admin_course.image, class: "w-64 rounded mb-2") : nil %>
              <label for="name" class="block text-sm font-medium leading-6 text-gray-700">Cover Image</label>
              <%= form.file_field :image, id: "image" %>
            </div>

          </div>

          <div class="flex items-center justify-end gap-x-6 border-t border-gray-900/10 px-4 py-4 sm:px-8 mt-4">
          <%= link_to "Cancel", admin_courses_path, class: "text-sm font-semibold leading-6 text-graphite hover:text-lightGraphite" %>

          <%= form.submit "Save", class: "rounded-md bg-paleFern px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-graphite focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-paleFern" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
