<%= content_for(:title, "Edit #{@super_admin_course.title}")%>

<div class="sticky top-0 py-4 bg-gray-50 border-b border-gray-300 <%= horizontal_padding %> z-20">
  <div class="flex justify-between">
    <div class="text-5xl tracking-wide font-medium"><%= @super_admin_course.title %>'s Lessons</div>
      <div class="flex flex-row">
        <%#= turbo_frame_tag "publish-button" do %>
          <%#= render "courses/publish_button", course: @course %>
        <%# end %>
        <%= link_to "New lesson", new_super_admin_course_lesson_path(@super_admin_course), class: "cursor-pointer text-white bg-paleFern hover:bg-graphite focus:ring-4 focus:ring-fern font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 focus:outline-none" %>
      </div>
  </div>

  <!-- Breadcrumbs -->
  <div class="flex justify-start mt-10">
    <ul class="flex px-5 py-3 text-gray-700 border border-gray-200 rounded-lg bg-gray-50">
      <li class="leading-none text-dark">
        <%= link_to super_admin_path, class: "inline-flex items-center text-orange-700" do %>
          <span class="text-sm leading-none">Dashboard</span>
        <% end %>
      </li>
      <li class="leading-none text-dark">
        <%= link_to super_admin_courses_path, class: "inline-flex items-center text-orange-700" do %>
          <s=an class="text-sm leading-none">/Courses</s=an>
        <% end %>
      </li>
      <li class="leading-none text-dark">
        <%= link_to super_admin_course_path(@super_admin_course), class: "inline-flex items-center text-orange-700" do %>
        <span class="text-sm leading-none">/<%= @super_admin_course.title %></span>
        <% end %>
      </li>
      <li class="leading-none text-dark">
        <span class="text-sm leading-none">/ Lessons</span>
      </li>
    </ul>
  </div>
</div>

<section class="py-12 lg:py-28 bg-gray-100">
  <div class="container mx-auto px-4 xl:px-0">

    <div data-controller="lesson" data-lesson-course-value="<%= @super_admin_course.slug %>" id="super_admin_lessons" data-sortable-animation-value="150" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 mt-20">
      <% @super_admin_lessons.each do |super_admin_lesson| %>
          <div id="<%= super_admin_lesson.id %>">
            <%= link_to [:super_admin, @super_admin_course, super_admin_lesson] do %>
              <%= render super_admin_lesson %>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>
</section>
