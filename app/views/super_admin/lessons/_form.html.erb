<%= form_with(model: [:super_admin, @super_admin_course, super_admin_lesson]) do |form| %>
  
  <%= render "super_admin/shared/error_messages", object: super_admin_lesson %>

  <div class="flex flex-col mt-4">
    <label for="title" class="text-sm">Title</label>
    <%= form.text_field :title, class: "rounded border-gray-200", id: "title", placeholder: "Lesson title" %>
  </div>

  <div class="flex flex-col mt-4">
    <label for="description" class="text-sm">Title</label>
    <%= form.rich_text_area :description, class: "rounded border-gray-200", id: "title", placeholder: "Lesson description..." %>
  </div>

  <div class="rounded mt-4">
    <div class="flex flex-col">
      <label for="paid" class="text-sm">Paid</label>
      <%= form.check_box :paid, class: "rounded border-gray-200", id: "paid" %>
    </div>
  </div>

  <div class="rounded mt-4">
    <div class="flex flex-col">
      <%= super_admin_lesson.video.present? ? (video_tag super_admin_lesson.video, class: "w-64 rounded") : nil %>
      <label for="paid" class="text-sm">Paid</label>
      <%= form.file_field :video, class: "rounded border-gray-200", id: "video" %>
    </div>
  </div>

  <div class="mt-4">
    <%= form.submit "Submit", class: "cursor-pointer text-white bg-lightGraphite hover:bg-graphite focus:ring-4 focus:ring-fern font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 focus:outline-none" %>
  </div>
<% end %>
