<% if course.published? %> 
  <%= link_to "Unpublish", course_unpublish_path(course), class: "cursor-pointer text-white bg-paleFern hover:bg-graphite focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 focus:outline-none", data: { "turbo_method": :put } %> 
<% else %> 
  <%= link_to "Publish", course_publish_path(course), class: "cursor-pointer text-white bg-lightGraphite hover:bg-graphite focus:ring-4 focus:ring-fern font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 focus:outline-none", data: { "turbo_method": :put } %> 
<% end %>