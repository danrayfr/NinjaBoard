<%= content_for(:title, @course.title)%>

<div class="py-12">
  <div class="mx-auto max-w-7xl border-2 border-black">
    <%# if @product.cover.attached? %>
      <%#= image_tag @product.cover, class: "block border-b-2 border-black" %>
    <%# end %>

    <div class="grid grid-cols-3">
      <div class="col-span-2 border-r-2 border-black">
        <h1 class="px-8 py-4 text-4xl tracking-wide border-b-2 border-black"><%= @course.title %></h1>

        <div class="px-8 flex border-b-2 border-black">
          <div class="py-4 pr-4 border-r-2 border-black ">
            <span class="inline-flex items-center bg-indigo-100 text-indigo-800 text-xs font-medium me-2 px-2.5 py-1 rounded-full">
              <%= @course.impact %>
            </span>
          </div> 
          <div class="pl-4 py-4">
            by <%= @course.author %>
          </div>
        </div>

        <div class="px-8 py-8">
          <%= @course.description %>
        </div>
      </div>
      <div class="col-span-1 px-8 py-4">
        <div class="mb-8">
          <% if AssignedCourse.exists?(user: current_user, course_id: @course.id) %>
            <p class="text-md font-semibold">You have already enrolled in this course.</p>
          <% else %>
            <%= form_tag assigned_courses_path(course_id: @course.id), method: :post, class: "inline-form", data: { turbo_frame: "course-form" } do %>
              <%= button_tag "Get Course", type: :submit, class: "rounded-sm bg-black px-3.5 py-2.5 text-sm border-2 border-black font-semibold text-white shadow-sm hover:bg-white hover:text-black hover:border-2 hover:border-black w-full" %>
            <% end %>
          <% end %>
        </div>
        <div>
          <ul class="divide-y-2 divide-black overflow-hidden bg-white shadow-sm ring-2 ring-black sm:rounded-sm">
            <li class="relative flex justify-between gap-x-6 px-4 py-5 hover:bg-gray-50 sm:px-6">
              <%= link_to @course.url, @course.url, target: '_blank' %>
            </li>
            <li class="relative flex justify-between gap-x-6 px-4 py-5 hover:bg-gray-50 sm:px-6">
              <span class="font-semibold">Category</span>
              <span class="capitalize"><%= @course.category %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
