<%= content_for(:title, "Courses") %>

<section class="container px-36 mx-auto my-12 py-12">
  <div>
    <div class="sm:flex sm:items-center sm:justify-between mb-6">
      <div>
        <div class="flex items-center gap-x-3">
          <h2 class="text-lg font-medium text-gray-800">Courses catalogue</h2>
          <span class="px-3 py-1 text-xs text-orange-700 hover:text-white border border-orange-700 hover:bg-orange-500 focus:ring-4 focus:outline-none focus:ring-orange-300 font-medium rounded-full">
            <%= pluralize @courses.count, "course" %>
          </span>
        </div>
        <p class="mt-1 text-sm text-gray-500">These are the published courses available on the platform.</p>
      </div>
  </div>

  <%= render "courses" %>
</section>
