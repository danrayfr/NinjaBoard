<section class="bg-white">
  <div class="container px-6 py-10 mx-auto">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-semibold text-gray-800 capitalize lg:text-3xl">Courses</h1>

      <button class="focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-600 transition-colors duration-300 transform hover:text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </button>
    </div>

    <hr class="my-8 border-gray-200" />

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 xl:grid-cols-3">
      <% @courses.each do |course| %>
        <div class="flex flex-col lg:flex-row lg:items-center justify-between  border-2 h-full  bg-gold rounded-2xl shadow-large gap-12 border-black p-8 ">
          <div class="mt-8">
            <span class="text-graphite uppercase">
                <%= course.category %>
                <span>&#8226;</span>
                <%= pluralize course.impact, "Impact" %>
            </span>
            <%= link_to course_path(course) do %>
              <h1 class="mt-4 text-xl font-semibold text-graphite"><%= course.title %></h1>
            <% end %>
            <p class="mt-2 text-graphite">
              <%= course.description.to_plain_text.truncate(150) %>
            </p>
            <div class="flex items-center justify-between mt-4">
              <div>
                <a href="#" class="text-lg font-medium text-gray-700 hover:underline hover:text-gray-500">
                  by <%= course.author %>
                </a>
                <p class="text-sm text-lightGraphite"><%= course.url %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
