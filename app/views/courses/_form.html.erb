<%= form_with model: course, class: "contents" do |form| %>

  <%- if course.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="flex flex-col mt-4">
    <%= course.image.present? ? (image_tag course.image, class: "w-64 rounded mb-2") : nil %>
    <label for="name" class="text-sm">Cover Image</label>
    <%= form.file_field :image, id: "image" %>
  </div>

  <div class="flex flex-col mt-4">
    <label for="name" class="text-sm">Paid</label>
    <%= form.check_box :paid, id: "paid", class: "rounded border-gray-200" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
