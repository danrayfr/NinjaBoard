<%= content_for(:title, "Home") %>

<div data-controller="tabs" data-tabs-default-tab-value="profile">
  <div class="relative overflow-hidden h-full bg-cover bg-no-repeat bg-center p-12 text-center" style="background-image: url('/assets/svg/blob.svg');">
    <div class="container mx-auto relative flex flex-row items-center gap-4 w-full h-8 mx-auto text-black select-none" x-ref="tabButtons">
      <div class="hidden sm:block">
        <div class="inline-flex rounded-md shadow-sm" role="group">
          <button id="profile" data-tabs-target="btn" data-action="click->tabs#select" type="button" class="px-4 py-2 text-sm font-medium text-gray-900 bg-transparent border border-gray-900 rounded-s-lg hover:bg-gray-900 hover:text-white focus:z-10 focus:ring-2 focus:ring-gray-500 focus:bg-gray-900 focus:text-white active">
            Profile
          </button>
          <button id="certificates" data-tabs-target="btn" data-action="click->tabs#select" type="button" class="px-4 py-2 text-sm font-medium text-gray-900 bg-transparent border-t border-b border-gray-900 hover:bg-gray-900 hover:text-white focus:z-10 focus:ring-2 focus:ring-gray-500 focus:bg-gray-900 focus:text-white active">
            Certificates
          </button>
          <button id="trophies" data-tabs-target="btn" data-action="click->tabs#select" type="button" class="px-4 py-2 text-sm font-medium text-gray-900 bg-transparent border border-gray-900 rounded-e-lg hover:bg-gray-900 hover:text-white focus:z-10 focus:ring-2 focus:ring-gray-500 focus:bg-gray-900 focus:text-white active">
            Trophies
          </button>
        </div>
      </div>
      <div class="sm:hidden">
        <div class="px-4 py-2 inline-flex" data-controller="dropdown" data-tabs-default-tab-value="profile">
          <button
            class="text-white bg-graphite hover:bg-paleFern focus:ring-4 focus:outline-none focus:ring-blue-300 font-normal tracking-wide rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center font-sister w-42"
            type="button"
            data-action="dropdown#toggle click@window->dropdown#hide"
          >
              Select View
              <svg class="w-2.5 h-2.5 ms-12" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4" />
              </svg>
          </button>

          <!-- Dropdown menu -->
          <div id="dropdownHover" class="absolute z-10 w-auto mt-2 origin-top-right rounded-lg bg-white ring-2 ring-black focus:outline-none" data-dropdown-target="menu">
              <ul class="py-2 text-sm text-gray-700" aria-labelledby="dropdownDividerButton">
                  <li>
                      <button id="profile" data-tabs-target="btn" data-action="click->tabs#select dropdown#toggle" class="block px-4 py-2 hover:bg-gray-100 capitalize hover:font-medium">Profile</button>
                  </li>
                  <li>
                      <button id="certificates" data-tabs-target="btn" data-action="click->tabs#select dropdown#toggle" class="block px-4 py-2 hover:bg-gray-100 capitalize hover:font-medium">Certificates</button>
                  </li>
                  <li>
                      <button id="trophies" data-tabs-target="btn" data-action="click->tabs#select dropdown#toggle" class="block px-4 py-2 hover:bg-gray-100 capitalize hover:font-medium">Trophies</button>
                  </li>
              </ul>
          </div>
        </div> 
      </div>
    </div>

    <div>
      <div data-tabs-target="tab" id="profile">
        <%= render "profile_tab" %>
      </div>
      <div data-tabs-target="tab" id="certificates">
        <%= render "certificate_tab" %>
      </div>
      <div data-tabs-target="tab" id="trophies">
        <%= render "trophies_tab" %>
      </div>
    </div>
  </div>
</div>



